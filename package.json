{
  "name": "angular-t9n",
  "version": "20.0.2",
  "description": "A translation tool for Angular i18n",
  "bin": {
    "ng-t9n": "./bin/cli.js"
  },
  "keywords": [
    "angular",
    "i18n",
    "xliff",
    "xlf",
    "xlf2",
    "translation",
    "t9n"
  ],
  "scripts": {
    "prepare": "husky",
    "ng": "ng",
    "start": "ng serve",
    "clean": "rimraf --glob coverage \"{bin,builders,schematics,server}/**/index.{js,d.ts}\"",
    "build": "npm run build:ng && npm run build:node",
    "build:ng": "ng build --configuration production",
    "build:node": "rollup --config rollup.config.mjs",
    "format": "prettier --ignore-unknown --write \"**/*\"",
    "test": "npm run test:node",
    "test:node": "jest",
    "lint": "ng lint",
    "xi18n:xlf": "ng extract-i18n -c xlf",
    "xi18n:xlf2": "ng extract-i18n",
    "xi18n": "npm run xi18n:xlf && npm run xi18n:xlf2",
    "t9n:xlf": "ng run angular-t9n:t9n -c xlf",
    "t9n:xlf2": "ng run angular-t9n:t9n",
    "release": "commit-and-tag-version --tag-prefix=\"\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/angular-t9n.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/angular-t9n/issues"
  },
  "files": [
    "bin/*.js",
    "builders/builders.json",
    "builders/*/*.{js,json}",
    "schematics/collection.json",
    "schematics/*/*.{js,json}",
    "server/client/*",
    "server/index.js"
  ],
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-ws": "^11.1.6",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/websockets": "^11.1.6",
    "@xmldom/xmldom": "^0.9.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "js-levenshtein": "^1.1.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "~7.8.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^20.1.1",
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/schematics": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular/animations": "^20.1.7",
    "@angular/build": "^20.1.6",
    "@angular/cdk": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/common": "^20.1.7",
    "@angular/compiler": "^20.1.7",
    "@angular/compiler-cli": "^20.1.7",
    "@angular/core": "^20.1.7",
    "@angular/forms": "^20.1.7",
    "@angular/language-service": "^20.1.7",
    "@angular/localize": "^20.1.7",
    "@angular/material": "^20.1.6",
    "@angular/platform-browser": "^20.1.7",
    "@angular/platform-browser-dynamic": "^20.1.7",
    "@angular/router": "^20.1.7",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/express": "^5.0.3",
    "@types/jasmine": "~5.1.9",
    "@types/jest": "^29.5.14",
    "@types/js-levenshtein": "^1.1.3",
    "@types/node": "^22.17.2",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "commit-and-tag-version": "^12.5.2",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.5.0",
    "jest": "^29.7.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.0"
  },
  "schematics": "./schematics/collection.json",
  "builders": "./builders/builders.json",
  "ng-add": {
    "save": "devDependencies"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.node.json"
        }
      ]
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "src"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.module.ts",
      "!**/*.d.ts",
      "!**/index.ts",
      "!**/*.spec.ts"
    ],
    "coverageDirectory": "coverage"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,html}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
