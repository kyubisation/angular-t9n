{
  "name": "angular-t9n",
  "version": "0.0.4",
  "description": "A translation tool for Angular i18n",
  "keywords": [
    "angular",
    "i18n",
    "xliff",
    "xlf",
    "xlf2",
    "translation",
    "t9n"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:ng && npm run build:rollup",
    "build:ng": "ng build --prod && node ./brotlify.js",
    "build:rollup": "rollup --config rollup.config.js",
    "format": "prettier --write **/*",
    "test": "ng test",
    "lint": "ng lint",
    "xi18n:xlf": "ng xi18n -c xlf",
    "xi18n:xlf2": "ng xi18n",
    "xi18n": "npm run xi18n:xlf && npm run xi18n:xlf2",
    "t9n:xlf": "ng run angular-t9n:t9n -c xlf",
    "t9n:xlf2": "ng run angular-t9n:t9n",
    "standard-version": "standard-version --tag-prefix=\"\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyubisation/angular-t9n.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kyubisation/angular-t9n/issues"
  },
  "files": [
    "{builders,schematics}/**/*.{json,js,d.ts}",
    "dist/**/*.*",
    "!tsconfig.json"
  ],
  "schematics": "./schematics/collection.json",
  "builders": "./builders/builders.json",
  "ng-add": {
    "save": "devDependencies"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@koa/router": "^8.0.5",
    "js-levenshtein": "^1.1.6",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-static": "^5.0.0",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.0-rc.7",
    "@angular/animations": "~9.0.0-rc.7",
    "@angular/cdk": "^9.0.0-rc.6",
    "@angular/cli": "~9.0.0-rc.7",
    "@angular/common": "~9.0.0-rc.7",
    "@angular/compiler": "~9.0.0-rc.7",
    "@angular/compiler-cli": "~9.0.0-rc.7",
    "@angular/core": "~9.0.0-rc.7",
    "@angular/forms": "~9.0.0-rc.7",
    "@angular/language-service": "~9.0.0-rc.7",
    "@angular/localize": "^9.0.0-rc.7",
    "@angular/material": "^9.0.0-rc.6",
    "@angular/platform-browser": "~9.0.0-rc.7",
    "@angular/platform-browser-dynamic": "~9.0.0-rc.7",
    "@angular/router": "~9.0.0-rc.7",
    "@types/jasmine": "~3.3.16",
    "@types/jasminewd2": "~2.0.8",
    "@types/js-levenshtein": "^1.1.0",
    "@types/koa": "^2.11.0",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^2.2.3",
    "@types/koa__router": "^8.0.2",
    "@types/node": "^12.11.1",
    "@types/xmldom": "^0.1.27",
    "@wessberg/rollup-plugin-ts": "^1.1.83",
    "codelyzer": "^5.1.2",
    "husky": "^3.1.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.6",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1",
    "protractor": "~5.4.0",
    "rollup": "^1.27.13",
    "standard-version": "^7.0.1",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.6.4",
    "xlsx": "^0.15.4",
    "zone.js": "~0.10.2"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,html}": [
      "npx prettier --write",
      "git add"
    ]
  }
}
